@{
    ViewBag.Title = "Suggestions Page";
}

@model Assignment4.Models.Suggestion

<h1 class="text-danger">Recommend a Restaurant</h1><br />

<form asp-action="Suggestions" method="post">
    <label asp-for="userName">Enter your name: </label>
    <input asp-for="userName" class="alert-danger" />
    <br />
    <label asp-for="restaurantName">Enter the restaurant's name: </label>
    <input asp-for="restaurantName" class="alert-danger" />
    <br />
    <label asp-for="FavoriteItem">Enter your favorite dish: </label>
    <input asp-for="FavoriteItem" class="alert-danger" />
    <br />
    <label asp-for="restaurantPhone">Restaurant's phone number: </label>
    <input asp-for="restaurantPhone" class="alert-danger" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="XXX-XXX-XXXX"/>
    <br /><br />
    <button type="submit" class="btn-danger">Submit your suggestion</button>
</form>
<br />
<div asp-validation-summary="All"></div>
<br />
<h4>Click <a asp-action="SuggestionList" class="text-danger">here</a> to see all suggestions.</h4>